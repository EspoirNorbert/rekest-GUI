<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: #272924;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rekest.views.ServiceEditDialogController">
   <children>
      <VBox prefHeight="300.0" prefWidth="500.0">
         <children>
            <Label fx:id="labelService" text="Nouveau service" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" left="10.0" top="25.0" />
               </VBox.margin>
            </Label>
            <Label text="Nom" textFill="WHITE">
               <padding>
                  <Insets bottom="5.0" left="10.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="testFieldNom">
               <VBox.margin>
                  <Insets bottom="25.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Département associé" textFill="WHITE">
               <padding>
                  <Insets bottom="5.0" left="10.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboBoxDepartement" prefHeight="26.0" prefWidth="502.0">
               <VBox.margin>
                  <Insets bottom="15.0" left="10.0" right="10.0" />
               </VBox.margin>
            </ComboBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <Button fx:id="btnOk" mnemonicParsing="false" onAction="#handleClickedOk" text="OK" />
                  <Button fx:id="btnAnnuler" layoutX="135.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleClickedAnnuler" text="ANNULER" />
               </buttons>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
